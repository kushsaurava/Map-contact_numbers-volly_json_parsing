            <TextView
                android:id="@+id/r_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Title"
                android:layout_alignBaseline="@+id/r_imageView"
                android:layout_toEndOf="@+id/r_imageView"
                android:layout_toRightOf="@+id/r_imageView"
                android:textStyle="bold"
                android:textSize="16sp" />




            <TextView
                android:id="@+id/request_brand_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/r_title"
                android:layout_toRightOf="@+id/r_imageView"
                android:layout_toEndOf="@+id/r_imageView"
                android:text="Email Id: " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Brand Name"
                android:id="@+id/request_brand_name_display"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/request_brand_name"
                android:layout_toRightOf="@+id/request_brand_name"
                android:layout_alignBaseline="@+id/request_brand_name"/>

