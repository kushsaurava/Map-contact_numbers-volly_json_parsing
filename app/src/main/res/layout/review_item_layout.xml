                android:layout_toEndOf="@+id/r_imageView"
                android:text="Comment:"
                />-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/phone_only"
                android:layout_below="@+id/request_brand_name"
                android:layout_toRightOf="@+id/r_imageView"
                >
            <TextView
                android:id="@+id/phonez"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone : " />
                <TextView
                android:id="@+id/r_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/phone_only"
                android:layout_toRightOf="@+id/r_imageView"
                >
                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Office Phone : " />
                <TextView
                    android:id="@+id/office_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comment" />
            </LinearLayout>




        </RelativeLayout>








